<div class="row">

    <div class="panel panel-flat">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Host</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, server in filezilla %}
                        <tr>
                            <td>#{{ key }}</td>
                            <td>{{server.Name}}</td>
                            <td>{{ server.Host}}</td>
                            <td>
                                <form action="{{ path('setting_ftp_to_site', {'server': key}) }}" class="form-inline" method="POST">
                                    <div class="form-group">
                                        <select name="site" id="site" class="form-control">
                                            {% for site in sites %}
                                                <option value="{{ site.id }}">{{site}}</option>
                                            {% endfor %}
                                        </select>
                                        <button class="btn btn-default btn-xs">
                                            <i class="fal fa-pen fa-fw"></i>
                                            set
                                        </button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="15">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>